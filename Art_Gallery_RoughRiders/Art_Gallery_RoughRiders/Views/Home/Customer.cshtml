@model List<Art_Gallery_RoughRiders.ViewModels.ArtDisplayViewModel>
@{
    ViewBag.Title = "Artwork Inventory";
}

<h2>Art Gallery</h2>
@using (Html.BeginForm())
{
  <p>
    Artist: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
  </p>
}
@*<table class="table">*@
<div class="container-fluid">
  <div class="row">
    @foreach (var item in Model)
    {
      
        <div class="col-md-2" style="margin-bottom:5px; height:400px; text-align:right">
          <a name='@String.Format("a{0}", item.ArtId)'></a>
          <img width="70%" src="@Url.Content(item.ArtWorkImage)" />
        </div>
      <div class="col-md-2" style="margin-bottom:5px; height:400px">
        <strong>@Html.DisplayFor(modelItem => item.ArtWorkTitle)</strong><br />
        @Html.DisplayFor(modelItem => item.ArtistName)<br />
        @Html.ActionLink("Show Details", "ArtDetails", new { artId = item.ArtId })
        
      </div>
      
    }
  </div>
</div>
@*</table>*@

